{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["environment"]
  },
  "include": ["**/*.ts"],
  "exclude": [
    "jest.config.ts",
    "jest.setup.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/__fixture__/*.ts",
    "src/__mocks__/*.ts"
  ]
}
