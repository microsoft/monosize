{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "monosize": ["packages/monosize/src/index.mts"],
      "monosize-bundler-esbuild": ["packages/monosize-bundler-esbuild/src/index.mts"],
      "monosize-bundler-webpack": ["packages/monosize-bundler-webpack/src/index.mts"],
      "monosize-storage-upstash": ["packages/monosize-storage-upstash/src/index.mts"],
      "monosize-storage-azure": ["packages/monosize-storage-azure/src/index.mts"]
    },
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "exclude": ["node_modules", "tmp"]
}
