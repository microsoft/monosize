{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "monosize": ["packages/monosize/src/index.mts"],
      "monosize-storage-upstash": ["packages/monosize-storage-upstash/src/index.mts"]
    },
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "exclude": ["node_modules", "tmp"]
}
